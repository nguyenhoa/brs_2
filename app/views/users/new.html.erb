<% provide(:title, 'Create member') %>
<h1>Create member</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :birthday %>
      <%= f.date_field :birthday %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :team, "Team" %>
      <%= f.collection_select(:team_id, Team.all, :id, :name, prompt: "Select please") %>

      <%= f.label :position %>
      <%= f.collection_select(:position_id, Position.all, :id, :name, prompt: "Select please") %>

      <%= f.label :project, "Projects joined" %>
      <% for project in @projects %>
        <%= check_box_tag "project_ids[]", project.id %>
        <%= project.name %>
      <% end %>

      <%= f.label :skill, "Skill" %>
      <% for skill in @skills %>
        <%= check_box_tag "skill_ids[]", skill.id %>
        <%= skill.name %><br>
      <% end %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create member", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
